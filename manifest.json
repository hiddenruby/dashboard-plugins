{
    "manifest_version": 2,
    "name": "Dashboard Plug-ins",
    "description": "Additional options and features for Tumblr.",
    "homepage_url": "https://github.com/hiddenruby/dashboard-plugins",
    "permissions": ["storage", "unlimitedStorage", "*://*.tumblr.com/*", "https://hiddenruby.github.io/dashboard-plugins/*"],
    "version": "0.1",
    "author": "Jo Ruby Pitt",
    "browser_action": {
        "default_icon": "/images/circle-plus.png",
        "default_title": "Dashboard Plug-ins"
    },
    "background":{
        "scripts":["background.js"]
    },
    "content_scripts": [
        {
        "matches": [
        "*://*.tumblr.com/*"
        ],
        "js": ["jquery-3.2.1.min.js", "content.js"],
        "run_at": "document_start",
        "all_frames": true
        }
    ]
}